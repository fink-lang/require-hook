{
  "name": "@fink/require-hook",
  "version": "0.0.0",
  "engines": {
    "node": ">=14.0.0"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fink-lang/require-hook"
  },
  "bugs": "https://github.com/fink-lang/require-hook/issues",
  "homepage": "https://github.com/fink-lang/require-hook",
  "scripts": {
    "default": "run clean test build",
    "clean": "rimraf ./build",
    "build": "run build:*",
    "build:dir": "mkdir -p ./build/pkg/",
    "build:fnk": "fnk --src ./src --out-dir ./build/pkg --ignore '**/*.test.fnk'",
    "build:files": "cp ./package.json ./README.md ./LICENSE ./build/pkg/",
    "test": "run jest",
    "jest": "jest --verbose --runInBand --no-cache ",
    "cd": "run clean test build release",
    "release": "semantic-release"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@fink/cli": "^6.1.0",
    "@fink/jest": "^5.1.0",
    "@fink/larix": "^12.1.0",
    "@fink/loxia": "^12.1.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "jest-cli": "^26.1.0",
    "npx-run": "^2.1.2",
    "semantic-release": "^17.1.0"
  },
  "peerDependencies": {
    "@fink/larix": ">=9.0.0",
    "@fink/loxia": ">=8.0.0"
  },
  "dependencies": {
    "@fink/js-interop": "^1.1.0",
    "@fink/std-lib": "^3.1.0",
    "pirates": "^4.0.1",
    "source-map-support": "^0.5.16"
  }
}
